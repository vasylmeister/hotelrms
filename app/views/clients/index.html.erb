<div class="page-header">
  <h1>Clients List</h1>
</div>

 <table class="table">
    <thead>
      <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Phone_number</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
    <% for client in @clients do %>
      <tr>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.phone_number %></td>
        <td><%= client.email %></td>
      </tr>
      <% end %>
    </tbody>
  </table>