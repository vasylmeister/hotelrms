    <div class="form-container">
    <%= form_for(@client) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
          <%= f.label :first_name, class: "control-label" %>
          <%= f.text_field :first_name, class: "form-control" %>
          <%= f.label :last_name, class: "control-label" %>
          <%= f.text_field :last_name, class: "form-control" %>
          <%= f.label :phone_number, class: "control-label" %>
          <%= f.text_field :phone_number, class: "form-control" %>
          <%= f.label :email, class: "control-label" %>
          <%= f.email_field :email, class: "form-control" %>
          <%= f.fields_for :cards do |f_card| %>
            <%= f.label :card_name, class: "control-label" %>
            <%= f_card.text_field :card_name, class: "form-control" %>
            <%= f.label :number, class: "control-label" %>
            <%= f_card.text_field :number, class: "form-control" %>
            <%= f.label :card_type, class: "control-label" %>
            <%= f_card.select(:card_type, ["Visa", "MasterCard"], {include_blank: true}, {class: "form-control"})  %>
            <%= f.label :exp_month, class: "control-label" %>
            <%= f_card.number_field :exp_month, class: "form-control" %>
            <%= f.label :exp_year, class: "control-label" %>
            <%= f_card.number_field :exp_year, class: "form-control" %>
            <%= f.label :cvv, class: "control-label" %>
            <%= f_card.number_field :cvv, class: "form-control" %>
          <% end %>
          <%= f.submit yield(:button_text), class: "btn btn-default" %>    
    <% end %>
    </div>